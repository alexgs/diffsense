{
  "name": "diffsense",
  "version": "0.0.0",
  "description": "Real-world software engineering benchmark for LLMs",
  "author": {
    "email": "alex.nebula99@gmail.com",
    "name": "Alex Gates-Shannon"
  },
  "license": "BSD-3-Clause",
  "packageManager": "npm@11.5.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexgs/diffsense.git"
  },
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build --filter='./packages/*' && turbo run dev --filter='./packages/*'",
    "cli": "npm -w @diffsense/cli run start",
    "coverage": "turbo run coverage",
    "lint": "turbo run lint",
    "test": "turbo run test --filter='!@diffsense/cli'",
    "test:watch": "turbo run test --filter='!@diffsense/cli' -- --watch"
  },
  "volta": {
    "node": "22.18.0",
    "npm": "11.5.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
